@model IEnumerable<Student>

<h2>Students</h2>

<a asp-action="Create" class="btn btn-primary">Add Student</a>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Cource</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var student in Model)
		{
			<tr>
				<td>@student.StudentName</td>
				<td>@student.Age</td>
				<td>@student.Course</td>
				<td>
					<a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |
					<a asp-action="Details" asp-route-id="@student.StudentId">Details</a> |
					<a asp-action="Delete" asp-route-id="@student.StudentId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>